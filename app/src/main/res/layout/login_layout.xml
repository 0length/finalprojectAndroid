<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bckglay"
        android:gravity="center_vertical"
        android:orientation="vertical">


    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/logotitipin"
            android:layout_gravity="center"
            android:id="@+id/imageView"
            android:layout_marginBottom="15dp"        

    />
    
    <TextView
            android:text="login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="35dp"
            android:textAlignment="center"
            android:id="@+id/textView"
            android:textColor="#fff"
            android:textAllCaps="true"

            app:layout_constraintEnd_toEndOf="parent" tools:layout_editor_absoluteY="188dp"
            android:layout_marginBottom="15dp"
    />
    <EditText
            android:id="@+id/etEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="15"
            android:textColorHint="#fff"
            android:layout_gravity="center"
            android:hint="Email"
            android:layout_marginBottom="15dp"
            android:textColor="#fff"
    />
    <android.support.design.widget.TextInputLayout
            android:id="@+id/etPasswordLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            app:boxBackgroundColor="#fff"
            android:layout_marginBottom="20dp"
            android:textColorHint="#fff"
            android:textColor="#fff"
    android:layout_gravity="center">

        <android.support.design.widget.TextInputEditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="password"
                android:ems="15"
                android:inputType="textPassword"/>
    </android.support.design.widget.TextInputLayout>


    <Button
            android:text="LOGIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/btnLogin"
            android:background="@drawable/shape_button"
            android:layout_marginBottom="15dp"
            android:textColor="#fff"
    />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

    <TextView
            android:text="did not have an account?"
            android:textColorHint="#fff"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="527dp"
    />
        <Button
                android:text="Register"
                android:textColor="#cd0000"
                android:layout_width="53dp"
                android:paddingHorizontal="0dp"
                android:layout_height="17dp"
                android:id="@+id/register"
                android:clickable="true"
                android:textAllCaps="false"
                android:background="@null"
        />
    <TextView
            android:text="Now!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="527dp"
            tools:layout_editor_absoluteX="322dp" android:id="@+id/textView3" tools:ignore="MissingConstraints"
            android:textColor="#fff"
    />
    </LinearLayout>
    <TextView android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:text="or continue with"
              android:textAlignment="center"
              android:layout_gravity="center"
              android:layout_marginBottom="15dp"
              android:textColor="#fff"

    />
    <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/emailSignInButton"
            android:background="@drawable/shape_button_gmail"
            android:layout_gravity="center"
            android:textColor="#cd0000"
            android:text="Google Account"
            android:textAllCaps="false"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="15dp"
    />
</LinearLayout>