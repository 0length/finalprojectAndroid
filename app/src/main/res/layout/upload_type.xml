<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:gravity="bottom"

>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:gravity="bottom"
              android:paddingBottom="150sp"
>

    <TextView
            android:text="Chose Upload Type"
            android:textColor="@color/orange"
            android:textSize="35sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textAlignment="center"
            android:layout_marginBottom="25dp"
    />
    <Button
            android:text="full cost type"
            android:paddingHorizontal="20dp"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:id="@+id/full_cost"
            android:background="@drawable/shape_button"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
    />
    <Button
            android:text="other ask type"
            android:layout_width="175dp"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:id="@+id/otherask"
            android:background="@drawable/shape_button"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
    />
    <Button
            android:text="people wanted type"
            android:paddingHorizontal="20dp"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_button"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:id="@+id/people_wanted"
    />
</LinearLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="bottom"
            android:layout_gravity="center_vertical"

    >
        <android.support.design.widget.BottomNavigationView
                android:id="@+id/btm_nav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                app:itemBackground="@color/orange"
                app:itemIconTint="@drawable/state_list"
                app:itemTextColor="@drawable/state_list"
                app:menu="@menu/navigation"
                android:layout_marginBottom="0dp"
                />

    </RelativeLayout>
</LinearLayout>
